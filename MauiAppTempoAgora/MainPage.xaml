<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppTempoAgora.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30, 0"
            Spacing="25">

            <Button Text="Minha Localização" Clicked="Minha_Localizacao_Clicked" />
            <Label x:Name="lbl_coords" /> <!-- Label para exibir as coordenadas da localização atual -->

            <Entry x:Name="txt_cidade" /> <!-- Campo de texto para o usuário digitar a cidade  -->
            <Button Text="Buscar previsão" Clicked="Buscar_Previsao_Clicked" /> <!-- Botão pra buscar o clima-->
            
            <Label x:Name="lbl_res" /> <!-- Label para exibir o resultado -->

            <WebView x:Name="wv_mapa" HeightRequest="500" /> <!-- Exibir o mapa do windy -->

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
